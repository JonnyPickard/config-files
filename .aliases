# Aliases
alias a="atom ."
alias prof="atom ~/.bash_profile"
alias p="cd ~/projects"
alias t="cd ~/test"
alias b="cd .."
alias c="clear"
alias lpath="IFS=':';for i in $PATH; do test -d "$i" && find "$i" -maxdepth 1 -executable -type f -exec basename {} \;; done"

# Git Alias
alias gs='git status '
alias gp='git push origin master'
alias g.='git add .; git commit -m '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gk='gitk --all&'
alias gx='gitx --all'
alias gcm='git checkout master; git pull;'

# Create .gitignore for node
alias gin='printf ".gitignore\nnode_modules" > .gitignore'
# Create .gitignore for ruby
alias gir='printf ".gitignore\n.bundle" > .gitignore'

# Random fun stuff
alias weather='ansiweather'
